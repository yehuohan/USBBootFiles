find --set-root /BOOT/GRUB/submenu.lst

title Return \n
configfile ()/boot/grub/submenu.lst

# 图形界面方式安装
title Install-gui kali \n
set showpath=1
set showdir=0
set slient=1
command SISO RUN --noload --autolist-all show.iso subdir=1 /iso/kali/ --end exit
set path=%filename%
find --set-root %path%
kernel /iso/kali/install/gtk/vmlinuz video=vesa:ywrap,mtrr vga=788 findiso=%path%
initrd /iso/kali/install/gtk/initrd.gz

# u盘运行kali
title Start kali live \n
set showpath=1
set showdir=0
set slient=1
command SISO RUN --noload --autolist-all show.iso subdir=1 /iso/kali/ --end exit
set path=%filename%
find --set-root %path%
kernel /iso/kali/live/vmlinuz boot=live username=root hostname=kali locale=zh_CN.UTF-8 findiso=%path%
initrd /iso/kali/live/initrd.img


